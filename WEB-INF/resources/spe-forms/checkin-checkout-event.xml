<form>
  <view>
    <name>SpecimenCheckInCheckOutEvent</name>
    <caption>Check In Check Out Event</caption>
    <table>CATISSUE_IN_OUT_EVENT_PARAM</table>
    <primaryKey>IDENTIFIER</primaryKey>

    <row>
      <dropDown>
        <name>status</name>
        <udn>status</udn>
        <caption>Storage Status</caption>
        <column>STORAGE_STATUS</column>
        <options>
          <option><value>CHECK IN</value></option>
          <option><value>CHECK OUT</value></option>
        </options>
        <mandatory>true</mandatory>
      </dropDown>
    </row>

    <row>
      <userField>
        <name>user</name>
        <udn>user</udn>
        <caption>User</caption>
        <column>USER_ID</column>
        <showInGrid>true</showInGrid>
      </userField>
    </row>

    <row>
      <datePicker>
        <name>time</name>
        <udn>time</udn>
        <caption>Date and Time</caption>
        <column>EVENT_TIMESTAMP</column>
        <format>MM-dd-yyyy HH:mm</format>
        <showInGrid>true</showInGrid>
        <default>current_date</default>
        <mandatory>true</mandatory>
      </datePicker>
    </row>


    <row>
      <textArea>
        <name>comments</name>
        <udn>comments</udn>
        <caption>Comments</caption>
        <column>COMMENTS</column>
        <height>2</height>
      </textArea>
    </row>
  </view>
</form>

